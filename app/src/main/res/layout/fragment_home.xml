<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:id="@+id/containerCards"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Título grande arriba -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="start"
            android:layout_marginStart="10dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/imageFeria"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:src="@drawable/logo_feria" />

            <TextView
                android:id="@+id/titleNaves"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¡Bienvenidos a la Feria Tabasco 2025!"
                android:textColor="#800080"
                android:textSize="28sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- Empiezan las card-->
        <LinearLayout
            android:id="@+id/card1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:layout_margin="8dp"
            android:gravity="start"
            android:clipToPadding="false"
            android:elevation="4dp"
            android:background="@drawable/rounded_card_background">

            <!-- Contenedor horizontal con imagen y textos -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Imagen -->
                <androidx.cardview.widget.CardView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="4dp"
                    android:layout_marginEnd="12dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/logo_nave1"
                        android:scaleType="centerCrop"/>
                </androidx.cardview.widget.CardView>


                <!-- Título y descripción -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🌳NAVE 1 GUAYACÁN"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="°Pabellón Nacional Artesanal\n°Foro Indígena\n°Área gastronómica"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonCard1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="+"
                android:background="@drawable/rounded_button"
                android:textColor="#FFFFFF"
                android:layout_marginTop="12dp"
                android:layout_gravity="end"
                android:textAllCaps="false"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/card2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:layout_margin="8dp"
            android:gravity="start"
            android:clipToPadding="false"
            android:elevation="4dp"
            android:background="@drawable/rounded_card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="4dp"
                    android:layout_marginEnd="12dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/logo_nave2"
                        android:scaleType="centerCrop"/>
                </androidx.cardview.widget.CardView>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🌸NAVE 2 MACUILÍ"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="°Stands de los 17 municipios\n°Stand de Gobierno de Estado\n°Foro Cultural"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonCard2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="+"

                android:background="@drawable/rounded_button"
                android:textColor="#FFFFFF"
                android:layout_marginTop="12dp"
                android:layout_gravity="end"
                android:textAllCaps="false"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/card3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:layout_margin="8dp"
            android:gravity="start"
            android:clipToPadding="false"
            android:elevation="4dp"
            android:background="@drawable/rounded_card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="4dp"
                    android:layout_marginEnd="12dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/logo_nave3"
                        android:scaleType="centerCrop"/>
                </androidx.cardview.widget.CardView>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🔥NAVE 3 FRAMBOYÁN"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="°Locales comerciales\n°Exposición de artesanías locales"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonCard3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="+"

                android:background="@drawable/rounded_button"
                android:textColor="#FFFFFF"
                android:layout_marginTop="12dp"
                android:layout_gravity="end"
                android:textAllCaps="false"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/card4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:layout_margin="8dp"
            android:gravity="start"
            android:clipToPadding="false"
            android:elevation="4dp"
            android:background="@drawable/rounded_card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="4dp"
                    android:layout_marginEnd="12dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/atracciones"
                        android:scaleType="centerCrop"/>
                </androidx.cardview.widget.CardView>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🎡ATRACCIÓN Y CONCIERTOS"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonCard4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="+"

                android:background="@drawable/rounded_button"
                android:textColor="#FFFFFF"
                android:layout_marginTop="12dp"
                android:layout_gravity="end"
                android:textAllCaps="false" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>

